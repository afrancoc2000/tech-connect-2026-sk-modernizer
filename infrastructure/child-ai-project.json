{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "description": "Child Template - Azure AI Project"
  },
  "parameters": {
    "aiProjectName": {
      "type": "string"
    },
    "aiHubName": {
      "type": "string"
    },
    "location": {
      "type": "string"
    }
  },
  "resources": [
    {
      "type": "Microsoft.MachineLearningServices/workspaces",
      "apiVersion": "2024-01-01-preview",
      "name": "[parameters('aiProjectName')]",
      "location": "[parameters('location')]",
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "friendlyName": "AI Modernizer Project",
        "description": "Azure AI Foundry Project for AI apps",
        "parentWorkspaceResourceId": "[resourceId('Microsoft.MachineLearningServices/workspaces', parameters('aiHubName'))]",
        "hbiWorkspace": false,
        "publicNetworkAccess": "Enabled"
      },
      "dependsOn": [
        "[resourceId('Microsoft.MachineLearningServices/workspaces', parameters('aiHubName'))]"
      ]
    }
  ],
  "outputs": {
    "aiProjectId": {
      "type": "string",
      "value": "[resourceId('Microsoft.MachineLearningServices/workspaces', parameters('aiProjectName'))]"
    }
  }
}

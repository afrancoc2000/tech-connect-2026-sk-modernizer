{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "description": "Child Template - Azure AI Hub"
  },
  "parameters": {
    "aiHubName": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "storageName": {
      "type": "string"
    },
    "kvName": {
      "type": "string"
    },
    "appInsightsName": {
      "type": "string"
    }
  },
  "resources": [
    {
      "type": "Microsoft.MachineLearningServices/workspaces",
      "apiVersion": "2024-01-01-preview",
      "name": "[parameters('aiHubName')]",
      "location": "[parameters('location')]",
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "friendlyName": "AI Modernizer Hub",
        "description": "Azure AI Foundry Hub for AI Apps Modernizer",
        "storageAccount": "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageName'))]",
        "keyVault": "[resourceId('Microsoft.KeyVault/vaults', parameters('kvName'))]",
        "applicationInsights": "[resourceId('Microsoft.Insights/components', parameters('appInsightsName'))]",
        "hbiWorkspace": false,
        "publicNetworkAccess": "Enabled",
        "v1LegacyMode": false,
        "kind": "Hub"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageName'))]",
        "[resourceId('Microsoft.KeyVault/vaults', parameters('kvName'))]",
        "[resourceId('Microsoft.Insights/components', parameters('appInsightsName'))]"
      ]
    }
  ],
  "outputs": {
    "aiHubId": {
      "type": "string",
      "value": "[resourceId('Microsoft.MachineLearningServices/workspaces', parameters('aiHubName'))]"
    }
  }
}
